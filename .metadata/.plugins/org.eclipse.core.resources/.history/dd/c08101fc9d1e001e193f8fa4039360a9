package UISwing;

import javax.swing.Action;
import javax.swing.JButton;
import javax.swing.JOptionPane;
import javax.swing.JPanel;

import Moeda.Moedas;
import Metricas.Metricas;
import PadraoConversor.PadraoConversor;
import Pesos.Pesos;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import java.awt.Color;
import java.awt.GridLayout;



public class appMenuSwing extends JPanel implements ActionListener{

    // crio instancia das classses
	private Moedas cmoedas;	
    private Metricas cmetrica; 
    private Pesos cpeso;
	
	//ActionListener
	public appMenuSwing() {
		setBackground(Color.RED);
		
		// cria botoes para acessar menu
		setLayout( new GridLayout(1,4));
        // adciona botoes
		adcionaItensMenu( "Conversor de Moedas", Color.BLUE);
		adcionaItensMenu( "Calcular IMC", Color.GREEN);
		adcionaItensMenu( "Conversor de Medidas", null);
		adcionaItensMenu( "Conversor de Pesos", null);
	}
		

    public void adcionaItensMenu(String msg, Color cor) {
    	BotaoSwing botao = new BotaoSwing( msg, cor);
    	botao.addActionListener(this);
    	this.add(botao);
    	
    }

	@Override
	public void actionPerformed(ActionEvent e) {
		if( e.getSource() instanceof JButton) {
			JButton botao = (JButton) e.getSource();
			
			String txtbotao = botao.getText().toUpperCase();
			if( txtbotao.contains("MOEDA")){
				//JOptionPane.showMessageDialog(null, "moedas");
                cmoedas = new Moedas(); 
				appDadosSwing moedas = new appDadosSwing( cmoedas );
				
				
			}else if( txtbotao.contains("MEDIDA")) {
                cmetrica = new Metricas(); 
				appDadosSwing moedas = new appDadosSwing( cmetrica );
				
			}else if( txtbotao.contains("PESO")) {
                cpeso = new Pesos(); 
				appDadosSwing moedas = new appDadosSwing( cpeso );
				
			}else {
				JOptionPane.showMessageDialog(null, ">>>>>>>  Seleçao Invalida..botao..");
				//System.out.println(txtbotao);	
			}

			
			
		}
	}
	

}
