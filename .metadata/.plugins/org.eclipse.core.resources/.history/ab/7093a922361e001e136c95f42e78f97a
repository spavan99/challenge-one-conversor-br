package UISwing;

import javax.swing.JFrame;
import java.awt.Color;
import java.awt.BorderLayout;
import java.awt.Dimension;

public class appDadosImput extends JFrame {

	 private String titulo = "App conversor dados";
	
    public appDadosImput() {
    	 start();
     }
	 
	
     public appDadosImput(String titulo) {
    	 this.titulo = titulo;
    	 start();
    	 
     }
	
	 private void start() {

			this.setDefaultCloseOperation( JFrame.EXIT_ON_CLOSE );
			//ocultar a barra superios
			//this.setUndecorated(true);
			//this.setLocationRelativeTo(null);
		    this.setSize(600,200);
			
		    organizarLayout();		
	        this.setVisible(true);

			//Painel meuPainel = new Painel();
		    //janela.add(meuPainel);

	}	
		
		
		private void organizarLayout() {

			// set tipo layout
			setLayout(new BorderLayout());
		

			TituloSwing titulo = new TituloSwing("APP - CONVERSOR DADOS");
			titulo.setPreferredSize( new Dimension(600, 50));
	        this.add( titulo, BorderLayout.NORTH); 

			// criar dados
	        appMenuSwing menu = new appMenuSwing();
			menu.setPreferredSize( new Dimension(600, 150));
	        this.add( menu, BorderLayout.CENTER); 
			
		}

     
	
}

